{
  "name": "everybody777-frontend",
  "private": true,
  "version": "0.1.0",
  "repository": "https://github.com/HollysParty/everybody777-frontend.git",
  "license": "MIT",
  "maintainers": [
    "mysticPrg",
    "sunny kyung"
  ],
  "scripts": {
    "start:monitor": "npm-run-all -p start:packages start:lerna:monitor",
    "start:paint": "npm-run-all -p start:packages start:lerna:paint",
    "start:packages": "lerna run start --scope '@package/*' --stream --parallel",
    "start:lerna:monitor": "lerna run start --scope @service/monitor --stream",
    "start:lerna:paint": "lerna run start --scope @service/paint --stream",
    "build": "lerna run build --scope @service/* --stream --include-dependencies",
    "build:packages": "lerna run build --scope '@package/*' --stream --include-dependencies",
    "build:monitor": "lerna run build --scope @service/monitor --stream --include-dependencies",
    "build:paint": "lerna run build --scope @service/paint --stream --include-dependencies",
    "lint": "prettier .",
    "test": "lerna run test --scope @service/* --stream --parallel --include-dependencies -- --passWithNoTests",
    "test:monitor": "lerna run test --scope @service/monitor --stream --include-dependencies -- --passWithNoTests",
    "test:paint": "lerna run test --scope @service/paint --stream --include-dependencies -- --passWithNoTests",
    "prettier": "prettier --write \"**/*.{js,jsx,mjs,ts,tsx}\""
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "services/*"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-prettier": "^3.1.4"
  },
  "dependencies": {
    "apollo-boost": "^0.4.9",
    "graphql": "^15.3.0",
    "react-apollo": "^3.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx}": [
      "prettier --write"
    ]
  }
}
