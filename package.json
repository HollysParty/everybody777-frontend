{
  "name": "everybody777-frontend",
  "private": true,
  "version": "0.1.0",
  "repository": "https://github.com/HollysParty/everybody777-frontend.git",
  "license": "MIT",
  "maintainers": [
    "mysticPrg",
    "sunny kyung"
  ],
  "scripts": {
    "start:monitor": "npm-run-all -p start:packages start:lerna:monitor",
    "start:paint": "npm-run-all -p start:packages start:lerna:paint",
    "start:packages": "lerna run start --scope '@package/*' --stream --parallel",
    "start:lerna:monitor": "lerna run start --scope @service/monitor --stream",
    "start:lerna:paint": "lerna run start --scope @service/paint --stream",
    "build": "lerna run build --scope @service/* --stream --include-dependencies",
    "build:packages": "lerna run build --scope '@package/*' --stream --include-dependencies",
    "build:monitor": "lerna run build --scope @service/monitor --stream --include-dependencies",
    "build:paint": "lerna run build --scope @service/paint --stream --include-dependencies",
    "lint": "lerna run lint --scope @service/* --stream --parallel --include-dependencies",
    "lint:monitor": "lerna run lint --scope @service/monitor --stream --include-dependencies",
    "lint:paint": "lerna run lint --scope @service/paint --stream --include-dependencies",
    "test": "lerna run test --scope @service/* --stream --parallel --include-dependencies",
    "test:monitor": "lerna run test --scope @service/monitor --stream --include-dependencies",
    "test:paint": "lerna run test --scope @service/paint --stream --include-dependencies"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "services/*"
    ]
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5"
  }
}
